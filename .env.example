# Variables de entorno de ejemplo
# Copia este archivo a .env.local para desarrollo local

# Variables de entorno para el despliegue
DATABASE_URL="postgresql://usuario:contraseña@host:puerto/basededatos?sslmode=require"
NEXTAUTH_URL="https://tu-dominio.vercel.app"
NEXTAUTH_SECRET="tu-secreto-seguro"
NEXT_PUBLIC_APP_URL="https://tu-dominio.vercel.app"

# Google OAuth (requerido para autenticación con Google)
GOOGLE_CLIENT_ID="tu-client-id"
GOOGLE_CLIENT_SECRET="tu-client-secret"

# Almacenamiento (Supabase)
NEXT_PUBLIC_SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# Stripe (opcional)
# STRIPE_SECRET_KEY=""
# STRIPE_WEBHOOK_SECRET=""
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Email (opcional)
EMAIL_SERVER_HOST="smtp.ejemplo.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="usuario@ejemplo.com"
EMAIL_SERVER_PASSWORD="contraseña"
EMAIL_FROM="noreply@ejemplo.com"

# Configuración de almacenamiento (opcional)
# Para almacenamiento de archivos (documentos)
# STORAGE_ACCESS_KEY=""
# STORAGE_SECRET_KEY=""
# STORAGE_BUCKET=""
# STORAGE_REGION=""

# Para producción con Vercel Postgres, Vercel configurará automáticamente:
# POSTGRES_PRISMA_URL
# POSTGRES_URL_NON_POOLING 